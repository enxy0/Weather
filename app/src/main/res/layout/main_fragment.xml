<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/cityNameTextView"
                style="@style/CustomStyle.Text.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Moscow, RU" />


            <ImageView
                android:id="@+id/currentDescriptionImageView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                tools:src="@drawable/weather_clear_day" />


            <TextView
                android:id="@+id/currentTemperatureTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_bold"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="45sp"
                tools:text="+17°" />

            <TextView
                android:id="@+id/currentFeelsLikeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans_bold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                tools:text="@string/feels_like" />

            <TextView
                android:id="@+id/currentDescriptionTextView"
                style="@style/CustomStyle.Text.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/section_vertical_margin"
                tools:text="Sunny" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomStyle.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/section_top_margin"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/humidityTileColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/cardview_details_padding"
                        android:paddingBottom="@dimen/cardview_details_padding">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_humidity"
                            android:tint="?attr/iconColor" />

                        <TextView
                            style="@style/CustomStyle.Text.Primary"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="@string/humidity"
                            android:textAlignment="center"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/currentHumidityTextView"
                            style="@style/CustomStyle.Text.Primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            tools:text="96%" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomStyle.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/section_top_margin"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/windTileColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/cardview_details_padding"
                        android:paddingBottom="@dimen/cardview_details_padding">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_wind"
                            android:tint="?attr/iconColor" />

                        <TextView
                            style="@style/CustomStyle.Text.Primary"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="@string/wind"
                            android:textAlignment="center"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/currentWindTextView"
                            style="@style/CustomStyle.Text.Primary"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            tools:text="2 m/s" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomStyle.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/section_top_margin"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pressureTileColor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/cardview_details_padding"
                        android:paddingBottom="@dimen/cardview_details_padding">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_pressure"
                            android:tint="?attr/iconColor" />

                        <TextView
                            style="@style/CustomStyle.Text.Primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="@string/pressure"
                            android:textAlignment="center"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/currentPressureTextView"
                            style="@style/CustomStyle.Text.Primary"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            tools:text="1016 gPа" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView
                android:id="@+id/hourTextView"
                style="@style/CustomStyle.Text.Header"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/section_next_hours" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hourRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingTop="@dimen/section_top_margin"
                    android:paddingEnd="4dp"
                    tools:itemCount="9"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_hour"
                    tools:orientation="horizontal" />

            <TextView
                android:id="@+id/dayTextView"
                style="@style/CustomStyle.Text.Header"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/section_five_day_forecast" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dayRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="4dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                tools:itemCount="5"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_day"
                tools:orientation="vertical" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
